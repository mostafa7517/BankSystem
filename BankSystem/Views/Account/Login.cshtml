    <script>
        // دالة لتبديل إظهار/إخفاء كلمة السر عند النقر على زر العين
        function toggleLoginPassword(event) {
            var input = document.getElementById("password"); // جلب حقل كلمة المرور حسب الـ ID
            var eye = event.currentTarget.querySelector('i'); // جلب أيقونة العين بداخل الزر
            if (input.type === "password") { // إذا الحقل في وضع الإخفاء
                input.type = "text"; // اجعله نص ظاهر
                eye.classList.remove('fa-eye'); // استبدل الأيقونة بالعين المفتوحة
                eye.classList.add('fa-eye-slash');
            } else { // إذا كان نص ظاهر
                input.type = "password"; // اخفي النص مرة أخرى
                eye.classList.remove('fa-eye-slash');
                eye.classList.add('fa-eye');
            }
        }

        // ربط زر العين بدالة التبديل
        document.getElementById('togglePasswordBtn').addEventListener('click', toggleLoginPassword);

        // انتهت كل الدوال والمنطق البرمجي للمميزات الديناميكية في الصفحة
    </script>

