@model IEnumerable<BankSystem.Data.Appointment> // الموديل هو قائمة مواعيد من نوع Appointment

@{
    ViewData["Title"] = "My Appointments"; // اسم الصفحة سيظهر في العنوان
    Layout = null; // الصفحة بدون Layout عام
}

<!DOCTYPE html>
 <!-- تعريف نوع الصفحة HTML5 -->
<html lang="en">
 <!-- صفحة HTML باللغة الإنجليزية -->
<head>
    <meta charset="UTF-8" /> <!-- تعيين ترميز الأحرف -->
    <title>@ViewData["Title"] - Nexus Bank</title> <!-- عنوان الصفحة في التبويب -->
    <meta name="viewport" content="width=device-width, initial-scale=1" /> <!-- لتكون الصفحة متجاوبة للجوال -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet" /> <!-- استيراد خطوط جوجل -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
          crossorigin="anonymous"
          referrerpolicy="no-referrer" /> <!-- استيراد أيقونات FontAwesome -->
    <style>
        :root { /* تعريف ألوان وثوابت CSS للاستخدام المتكرر */
            --primary: #7ea1ce;
            --secondary: #bdd7ee;
            --deep-blue: #285686;
            --header-bg: #c3daf4;
            --footer-bg: #7ea1ce;
            --footer-light: #c3daf4;
            --white: #f8f8fa;
            --text: #19557b;
            --danger: #dc3545;
        }

        body { /* خصائص الخط والخلفية والألوان العامة */
            font-family: 'Montserrat', Arial, sans-serif;
            margin: 0;
            background: var(--white);
            color: var(--text);
            line-height: 1.5;
        }

        /* --- تصميم الشريط العلوي --- */
        .navbar {
            background-color: #003366;
            border: 3px solid #FFF2F2;
            border-radius: 30px;
            padding: 10px 30px;
            margin: 20px auto;
            width: 90%;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .logo {
            display: flex;
            align-items: center;
            gap: 10px;
            font-weight: bold;
            color: #fff;
        }

            .logo img { /* صورة اللوجو */
                width: 40px;
                height: 40px;
                transform: scale(1.5);
                border-radius: 50%;
                margin-left: 160%;
            }

            .logo .highlight {
                color: #d0d0ff;
            }

        .nav-links { /* قائمة روابط النفيجيشن */
            list-style: none;
            display: flex;
            gap: 25px;
            margin: 0;
            padding-right: 35%;
        }

            .nav-links a { /* تصميم كل عنصر قائمة */
                color: #ffffff;
                cursor: pointer;
                transition: 0.3s;
                padding: 6px 16px;
                border-radius: 20px;
                font-family: "Tagesschrift", system-ui;
                font-size: 1.2rem;
                text-decoration: none;
            }

        /* --- الحاوية العامة --- */
        .container {
            max-width: 1080px;
            margin: 48px auto 80px auto;
            padding: 0 40px;
            color: var(--text);
        }

        /* --- رأس جدول المواعيد وأزراره --- */
        .appt-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 32px;
            flex-wrap: wrap;
        }

            .appt-header h2 { /* عنوان القسم */
                font-size: 2.8rem;
                font-weight: 700;
                color: var(--deep-blue);
                margin: 0;
                display: flex;
                align-items: center;
                gap: 0.5em;
                user-select: none;
            }

        .btn-primary { /* زر إضافة موعد جديد */
            background: var(--deep-blue);
            color: #fff;
            font-weight: 700;
            padding: 12px 28px;
            border-radius: 25px;
            font-size: 1rem;
            border: none;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 8px;
            text-decoration: none;
            transition: background 0.25s;
        }

            .btn-primary:hover,
            .btn-primary:focus {
                background: #13335a;
                color: #fff;
            }

        .alert-success { /* رسالة نجاح */
            background: #d1e7dd;
            color: #0f5132;
            border-radius: 25px;
            padding: 18px 28px;
            margin-bottom: 24px;
            font-size: 1rem;
        }

        .alert-info { /* رسالة معلومات */
            background: #cff4fc;
            color: #055160;
            border-radius: 25px;
            padding: 18px 28px;
            margin-bottom: 24px;
            font-size: 1rem;
        }

        .card-appointments { /* تغليف للجدول */
            background: #003366;
            border-radius: 40px;
            padding: 30px 36px;
            box-shadow: 0 0 15px rgba(40, 86, 134, 0.1);
            color: #fff;
            overflow-x: auto;
        }

        table { /* تصميم الجدول */
            width: 100%;
            border-collapse: collapse;
            color: var(--deep-blue);
            background: #fff;
            border-radius: 24px;
            overflow: hidden;
            box-shadow: 0 2px 10px #bed7ee77;
            font-size: 1rem;
        }

        thead tr { /* صف رأس الجدول */
            background: var(--header-bg);
            color: var(--deep-blue);
            font-weight: 700;
            font-size: 1.1rem;
        }

        th,
        td { /* رؤوس وأعمدة الجدول */
            padding: 18px 24px;
            text-align: left;
            vertical-align: middle;
            border-bottom: 1.5px solid var(--secondary);
        }

        tbody tr:hover { /* تأثير على الصف عند المرور */
            cursor: pointer;
        }

        .badge { /* شارة الحالة */
            display: inline-block;
            padding: 6px 16px;
            border-radius: 20px;
            font-size: 0.9rem;
            font-weight: 600;
            text-align: center;
            min-width: 85px;
        }

        .bg-warning {
            background-color: #ffc107;
            color: #3a3a00;
        }

        .bg-success {
            background-color: #28a745;
            color: #e5fcec;
        }

        .bg-info {
            background-color: #17a2b8;
            color: #e0f3f9;
        }

        .bg-danger {
            background-color: #dc3545;
            color: #fff;
        }

        .bg-secondary {
            background-color: #6c757d;
            color: #fff;
        }

        .btn-cancel { /* زر إلغاء الموعد */
            color: var(--danger);
            background: transparent;
            border: 2px solid var(--danger);
            border-radius: 25px;
            padding: 8px 20px;
            font-size: 0.9rem;
            font-weight: 600;
            cursor: pointer;
            transition: background 0.2s, color 0.2s;
            text-decoration: none;
            display: inline-block;
        }

            .btn-cancel:hover,
            .btn-cancel:focus {
                background: var(--danger);
                color: #fff;
                text-decoration: none;
            }

        /* --- مقال تعريفي بالبنك --- */
        .main-article {
            max-width: 1080px;
            margin: 80px auto 100px auto;
            padding: 0 40px;
            display: flex;
            gap: 48px;
            color: var(--text);
            flex-wrap: wrap;
        }

        .article-image {
            flex: 1 1 320px;
            border-radius: 40px;
            overflow: hidden;
            box-shadow: 0 0 36px #7ea1ceaa;
            min-width: 280px;
            max-width: 480px;
        }

            .article-image img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                border-radius: 40px;
                display: block;
            }

        .article-content {
            flex: 1.3 1 480px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

            .article-content h1 {
                font-size: 3rem;
                font-weight: 700;
                margin-bottom: 16px;
                color: var(--deep-blue);
            }

            .article-content p {
                font-size: 1.18rem;
                font-weight: 300;
                margin-bottom: 0;
                line-height: 1.6;
            }

        /* --- الفوتر موقع البنك --- */
        .footer {
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            color: white;
            padding: 2rem 0;
            position: relative;
            overflow: hidden;
        }

            .footer::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: linear-gradient(45deg, rgba(255,255,255,0.1) 0%, transparent 50%);
                pointer-events: none;
            }

        .footer-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 2rem;
            position: relative;
            z-index: 2;
        }

        .footer-main {
            display: flex;
            flex-direction: column;
            gap: 2rem;
            margin-bottom: 2rem;
        }

        .footer-top {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 2rem;
        }

        .logo-section {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .flogo {
            background: rgba(255, 255, 255, 0.2);
            width: 60px;
            height: 60px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            font-weight: bold;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

        .bank-name {
            font-size: 2rem;
            font-weight: 300;
            letter-spacing: 1px;
        }

        .contact-info {
            display: flex;
            gap: 2rem;
            align-items: center;
            flex-wrap: wrap;
        }

        .contact-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1rem;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            backdrop-filter: blur(5px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            transition: all 0.3s ease;
        }

            .contact-item:hover {
                background: rgba(255, 255, 255, 0.2);
                transform: translateY(-2px);
            }

        .contact-icon {
            width: 20px;
            height: 20px;
            opacity: 0.8;
        }

        .footer-bottom {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-top: 2rem;
            border-top: 1px solid rgba(255, 255, 255, 0.2);
            flex-wrap: wrap;
            gap: 1rem;
        }

        .copyright {
            font-size: 0.9rem;
            opacity: 0.8;
        }

        .footer-links {
            display: flex;
            gap: 2rem;
            align-items: center;
        }

        .footer-link {
            color: white;
            text-decoration: none;
            font-size: 0.9rem;
            transition: all 0.3s ease;
            padding: 0.5rem 1rem;
            border-radius: 6px;
            border: 1px solid transparent;
        }

        .footer-links a {
            text-decoration: none;
            color: #ffffff;
        }

        .footer-link:hover {
            background: rgba(255, 255, 255, 0.1);
            border-color: rgba(255, 255, 255, 0.3);
            transform: translateY(-1px);
        }

        .divider {
            width: 1px;
            height: 20px;
            background: rgba(255, 255, 255, 0.3);
        }

        /* ----------- Testimonials Section (from Home) ----------- */
        .testimonials-section {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
            padding: 40px 20px;
        }

        .testimonials-container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .testimonials-header {
            text-align: center;
            margin-bottom: 40px;
        }

        .testimonials-title {
            color: #003366;
            font-family: "Berkshire Swash", serif;
            font-size: 4rem;
            position: relative;
            display: inline-block;
            margin-left: %;
            margin-top: 3%;
        }

        .testimonials-subtitle {
            font-size: 1.3rem;
            min-width: 750px;
            margin: 0 220px 40px;
            color: #555;
            font-family: "Rosarivo", cursive;
            font-style: italic;
            font-weight: bold;
            text-align: center;
        }

        .tabs-container {
            display: flex;
            justify-content: center;
            margin-bottom: 40px;
        }

        .tab-buttons {
            display: flex;
            background: rgba(255, 255, 255, 0.9);
            border-radius: 50px;
            padding: 8px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            backdrop-filter: blur(10px);
            width: 30%;
            align-items: center;
        }

        .tab-button {
            padding: 2px 30px;
            border: none;
            border-radius: 40px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            background: transparent;
            color: #7f8c8d;
        }

            .tab-button.active {
                background: linear-gradient(135deg, #003366 0%, #667eea 100%);
                color: white;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
            }

        .testimonials-slider {
            position: relative;
            overflow: hidden;
            border-radius: 20px;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            padding: 20px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
        }

        .testimonials-track {
            display: flex;
            transition: transform 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94);
            width: 200%;
        }

        .testimonials-group {
            display: flex;
            width: 50%;
            gap: 20px;
            padding: 20px;
        }

        .testimonial-card {
            flex: 1;
            background: rgba(255, 255, 255, 0.95);
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            position: relative;
            transition: all 0.3s ease;
            backdrop-filter: blur(10px);
        }

            .testimonial-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
                background: linear-gradient(135deg, #003366 0%, #667eea 100%);
                color: #ffffff;
            }

                .testimonial-card:hover .testimonial-text {
                    color: white;
                }

                .testimonial-card:hover .testimonial-author {
                    color: white;
                }

                .testimonial-card:hover .quote-icon {
                    color: rgba(255, 255, 255, 0.7);
                }

        .quote-icon {
            font-size: 3rem;
            color: #667eea;
            margin-bottom: 20px;
            opacity: 0.3;
        }

        .testimonial-text {
            font-size: 1.1rem;
            line-height: 1.7;
            color: #34495e;
            margin-bottom: 25px;
            font-style: italic;
            font-family: "Rosarivo", cursive;
        }

        .testimonial-author {
            font-weight: 700;
            color: #2c3e50;
            font-size: 1.1rem;
            font-family: "Berkshire Swash", serif;
        }

        .nav-buttons {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 30px;
        }

        .nav-button {
            width: 50px;
            height: 50px;
            border: none;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            font-size: 1.2rem;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
        }

            .nav-button:hover {
                transform: translateY(-3px);
                box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
            }

            .nav-button:disabled {
                opacity: 0.5;
                cursor: not-allowed;
                transform: none;
            }
    </style>
</head>
<header>
    <nav class="navbar">
        <!-- الشريط العلوي للتنقل -->
        <div class="logo">
            <!-- الشعار -->
            <img src="/img/nav.jpg" alt="Logo" /> <!-- صورة الشعار -->
        </div>
        <ul class="nav-links">
            <!-- الروابط -->
            <a href="/Home/Index">Home</a> <!-- الرئيسية -->
            <a href="/Home/Careers">Careers</a> <!-- وظائف -->
            <a href="/Home/About">About</a> <!-- من نحن -->
            <a href="/Home/Security">Security</a> <!-- الحماية -->
        </ul>
    </nav>
</header>
<body>
    <!-- Appointments Section -->
    <main class="container" role="main">
        <!-- الحاوية الرئيسية -->
        <section aria-label="My Appointments">
            <!-- قسم جدول المواعيد -->
            <div class="appt-header">
                <!-- رأس الجدول وأزراره -->
                <h2><i class="fa-regular fa-calendar" style="margin-right:6px;"></i>My Appointments</h2> <!-- عنوان مع أيقونة -->
                <a asp-action="Create" class="btn-primary">
                    <i class="fas fa-calendar-plus"></i> Book New Appointment
                </a>
            </div>

            @if (TempData["SuccessMessage"] != null) // إذا يوجد رسالة نجاح (بعد إضافة أو إلغاء أو غيره)
            {
                <div class="alert-success" role="alert">
                    @TempData["SuccessMessage"]
                </div>
            }

            @if (!Model.Any()) // لو ليس لديك مواعيد حالياً
            {
                <div class="alert-info" role="alert">
                    You don't have any appointments scheduled. Book one now!
                </div>
            }
            else // لو لديك مواعيد اعرض الجدول
            {
                <div class="card-appointments" role="region" aria-live="polite" aria-relevant="additions">
                    <table>
                        <thead>
                            <tr>
                                <th>Date &amp; Time</th>
                                <th>Purpose</th>
                                <th>Status</th>
                                <th>Notes</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var appointment in Model) // لكل موعد في القائمة
                            {
                                var badgeClass = appointment.Status switch // حدد لون البادج حسب الحالة
                                {
                                    "Pending" => "bg-warning",
                                    "Approved" => "bg-success",
                                    "Completed" => "bg-info",
                                    "Cancelled" => "bg-danger",
                                    _ => "bg-secondary"
                                };
                                <tr>
                                    <td>@appointment.AppointmentDate.ToString("MMM dd, yyyy hh:mm tt")</td> <!-- تاريخ ووقت الموعد -->
                                    <td>@appointment.Purpose</td> <!-- الغرض من الموعد -->
                                    <td>
                                        <span class="badge @badgeClass">@appointment.Status</span> <!-- شارة بحالة الموعد -->
                                    </td>
                                    <td>@appointment.Notes</td> <!-- ملاحظات الموعد -->
                                    <td>
                                        @if (appointment.Status == "Pending" || appointment.Status == "Approved") // إن كان يمكن إلغاؤه
                                        {
                                            <a asp-action="Cancel" asp-route-id="@appointment.Id" class="btn-cancel"
                                               onclick="return confirm('Are you sure you want to cancel this appointment?')">
                                                Cancel
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </section>
    </main>

    <!-- Article Section -->
    <section class="main-article" aria-labelledby="service-heading">
        <div class="article-image" aria-hidden="true">
            <!-- صورة تعريفية -->
            <img src="https://cdn.qwenlm.ai/2366582a-75c6-49d7-a890-5bd72233a6de/277ecfcd-c79c-44dc-8f75-29bd61cdb4b5_3e265ede-55d8-437a-8084-22e8ae6229df.jpg?key=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJyZXNvdXJjZV91c2VyX2lkIjoiMjM2NjU4MmEtNzVjNi00OWQ3LWE4OTAtNWJkNzIyMzNhNmRlIiwicmVzb3VyY2VfaWQiOiIyNzdlY2ZjZC1jNzljLTQ0ZGMtOGY3NS0yOWJkNjFjZGI0YjUiLCJyZXNvdXJjZV9jaGF0X2lkIjpudWxsfQ.jF0LDj1HQZGLvWSAJlbilHp4u3AAtevQXvpr5t3M67g"
                 alt="Smiling bank staff providing excellent customer service" />
        </div>
        <article class="article-content">
            <h1 id="service-heading">Your Trusted Partner in Financial Success</h1>
            <p>
                At Nexus Bank, we combine cutting-edge technology with personalized service to meet your financial needs.
                Whether personal banking or business solutions, our dedicated experts are here to support your journey.
            </p>
        </article>
    </section>

    <!-- Testimonials Section (from Home page) -->
    <div class="testimonials-section">
        <!-- قسم آراء العملاء -->

        <div class="testimonials-container">
            <div class="testimonials-header">
                <h2 class="testimonials-title">Testimonials</h2>
                <p class="testimonials-subtitle">
                    Discover how Nexus Bank has transformed lives with innovative digital solutions and personalized customer service. See why our clients trust us for a secure and prosperous financial journey
                </p>
            </div>

            <div class="tabs-container">
                <!-- حاوية أزرار التبديل بين شهادات الأفراد والشركات -->
                <div class="tab-buttons">
                    <button class="tab-button active" onclick="switchTab('individuals')">For Individuals</button> <!-- زر شهادات الأفراد -->
                    <button class="tab-button" onclick="switchTab('businesses')">For Businesses</button> <!-- زر شهادات الشركات -->
                </div>
            </div>

            <div class="testimonials-slider">
                <!-- سلايدر الشهادات -->
                <div class="testimonials-track" id="testimonialsTrack">
                    <!-- شهادات الأفراد -->
                    <div class="testimonials-group" id="individuals">
                        <div class="testimonial-card">
                            <div class="quote-icon">"</div>
                            <p class="testimonial-text">
                                YourBank has been my trusted financial partner for years. Their personalized service and innovative digital banking solutions have made managing my finances a breeze.
                            </p>
                            <div class="testimonial-author">Sara T</div>
                        </div>

                        <div class="testimonial-card">
                            <div class="quote-icon">"</div>
                            <p class="testimonial-text">
                                I recently started my own business, and YourBank has been instrumental in helping me set up my business accounts and secure the financing I needed. Their expert guidance and tailored solutions have been invaluable.
                            </p>
                            <div class="testimonial-author">John D</div>
                        </div>

                        <div class="testimonial-card">
                            <div class="quote-icon">"</div>
                            <p class="testimonial-text">
                                I love the convenience of YourBank's mobile banking app. It allows me to stay on top of my finances and make transactions on the go. The app is user-friendly and secure, giving me peace of mind.
                            </p>
                            <div class="testimonial-author">Emily G</div>
                        </div>
